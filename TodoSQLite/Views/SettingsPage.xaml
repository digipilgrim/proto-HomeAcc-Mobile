<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoSQLite.Views.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <Label 
            Text="Enter the name of DB" 
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Entry 
            x:Name="WelcomeLbl"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Button x:Name="SaveButton" Clicked="SaveButton_Clicked" Text="Save" Margin="20" Grid.Row="0"/>
    </VerticalStackLayout>
</ContentPage>